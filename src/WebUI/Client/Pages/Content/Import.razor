@page "/content/import"

<MudPaper Elevation="25" Class="mb-2">
    <MudToolBar>
        <MudText Typo="Typo.h5">Import</MudText>
        <MudSpacer />
        <MudTextField @ref="input_ref"
                      Clearable=true
                      Immediate=true
                      Placeholder="BoargGameGeek Username"
                      Class="mt-0"
                      @bind-Value="username"
                      OnKeyPress="ImportOnEnterAsync" />
        <MudIconButton Icon="@Icons.Outlined.CloudDownload"
                       OnClick="ImportFromBGG" />
    </MudToolBar>
    @if (loading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    }
</MudPaper>

<MudOverlay Visible="loading" DarkBackground="true"/>
